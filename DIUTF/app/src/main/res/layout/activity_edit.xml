<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/cambiarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Cambiar..."
            android:textSize="10sp" />

        <TextView
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cambiarImagen"
            android:layout_marginTop="22dp"
            android:text="Correo electrónico: " />

        <EditText
            android:id="@+id/correoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/correo"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="manolo@ulpgc.es"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nombreUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/correoTexto"
            android:text="Nombre de usuario:" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nombreUser"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ManoloZ"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nameText"
            android:text="Contraseña:" />

        <EditText
            android:id="@+id/contraseñaTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contraseña"
            android:ems="10"
            android:inputType="textPassword"
            android:text="1234"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/playa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contraseñaTexto"
            android:text="Playas Favoritas:" />

        <Button
            android:id="@+id/cambios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Aplicar Cambios" />

        <EditText
            android:id="@+id/playas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/playa"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=" Las Canteras" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>